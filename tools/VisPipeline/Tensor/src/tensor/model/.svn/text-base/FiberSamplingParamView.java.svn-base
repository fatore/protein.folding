    @Override
    public void finished() throws IOException {
        int number = Integer.parseInt(fiberNumberTextField.getText().trim());

        if (number > 0) {
            comp.setNumberOfFibers(number);
        } else {
            throw new IOException("Number of fibers is incorrect");
        }
    }

    @Override
    public void reset() {
        this.fiberNumberTextField.setText(""+comp.getNumberOfFibers());
    }

