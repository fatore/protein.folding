    public void setValue(float value) {
        opacitySlider.setValue((int)(value * 100));
    }

    public float getValue() {
        return (isCancel ? -1.f : opacitySlider.getValue() / 100.f);
    }

    public static float showDialog(JFrame parent, String Title, float initial) {
        JOpacityChooser choose = new JOpacityChooser(parent, true);
        choose.setValue(initial);
        choose.setTitle(Title);
        choose.pack();
        choose.setLocationRelativeTo(parent);
        choose.setVisible(true);

        return choose.getValue();
    }

