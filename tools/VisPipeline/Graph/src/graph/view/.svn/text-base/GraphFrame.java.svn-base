    public boolean runForce() {
        if (model != null) {
            if (start) {
                for (AbstractInstance ai : model.getInstances()) {
                    GraphInstance gi = (GraphInstance) ai;

                    if (gi.fdata == null) {
                        gi.fdata = new ForceData();
                    }
                }

                force = new ForceDirectLayout((GraphModel) model, this);
                force.start(this.getCurrentConnectivity());
                this.start = false;
            } else {
                this.force.stop();
                this.start = true;
            }
        }

        model.setChanged();
        model.notifyObservers();

        return this.start;
    }

